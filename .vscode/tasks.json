{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make autojobs=true",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "build_debug",
			"type": "shell",
			"command": "make autojobs=true debug=true",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "run",
			"type": "shell",
			"command": "make run",
			"dependsOn": "build",
			"problemMatcher": []
		},
		{
			"label": "run_debug",
			"type": "shell",
			"command": "make run debug=true",
			"dependsOn": "build_debug",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": []
		}
	]
}